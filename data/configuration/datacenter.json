{
    "id": "datacenter",
    "name": "Datacenter",
    "description": "A datacenter Configuration object",
    "configuration": {
        "schedulingInterval": {
            "description": "The datacenter's scheduling interval",
            "type": "int",
            "defaultValue": 5,
            "required": true
        },
        "vmAllocationPolicy": {
            "description": "A policy to choose a host to place or migrate a given Vm",
            "type": "select",
            "defaultValue": "Simple",
            "required": true,
            "multiple": false,
            "options": [
                "Simple",
                "RoundRobin",
                "Random",
                "FirstFit",
                "BestFit"
            ]
        }
    }
}
